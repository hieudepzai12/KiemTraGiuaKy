<div class="col-md-3">
    <ul class="list-group listLoaiTin" id="menu">
        <li href="#" class="danhMuc list-group-item menu1 active">
            Danh mục thể loại
        </li>
        <% listData.forEach(data => { %>
            <li href="#" class="list-group-item menu1">
                <%= data.theLoai.Ten %>
            </li>
            <ul class="sub-menu" style="display: none;">
                <% data.loaiTin.forEach(lt => { %>
                <li class="list-group-item liLoaiTin">
                    <a class="loaiTin" href="/loaitin/<%=lt.id%>/page1"><%= lt.Ten %></a>
                </li>
                <% }) %>
            </ul>
        <% }) %>
    </ul>
</div>

<script>
   document.addEventListener('DOMContentLoaded', () => {
    // Đóng tất cả các menu con khi tải trang
    document.querySelectorAll('.sub-menu').forEach(subMenu => {
        subMenu.style.display = 'none';
    });

    // Thêm sự kiện click để mở/đóng menu
    document.querySelectorAll('.menu1').forEach(menu => {
        menu.addEventListener('click', () => {
            // Đóng tất cả menu con trước
            document.querySelectorAll('.sub-menu').forEach(subMenu => {
                subMenu.style.display = 'none';
            });

            // Mở menu con liên quan
            const subMenu = menu.nextElementSibling;
            if (subMenu && subMenu.classList.contains('sub-menu')) {
                subMenu.style.display = 'block';
            }
        });
    });
});
</script>