<div class="panel-heading danhMuc">
    <h4><b>
            <%= tenTLLT.tenTL %> >> <%= tenTLLT.tenLT %>
        </b></h4>
</div>
<% pagedTinTuc.forEach(tinTuc=> { %>
    <div class="row-item row">
        <div class="col-md-3">
            <a href="/:idLT/:idTin">
                <br>
                <img width="200px" height="200px" class="img-responsive" src="/img/tintuc/<%= tinTuc.Hinh %>" alt="">
            </a>
        </div>
        <div class="col-md-9">
            <h3>
                <%= tinTuc.TieuDe %>
            </h3>
            <p>
                <%= tinTuc.TomTat %>
            </p>
            <a class="btnXemNgay btn btn-primary" href="/:idLT/:idTin">Xem ngay <span
                    class="glyphicon glyphicon-chevron-right"></span></a>
        </div>
        <div class="break"></div>
    </div>
    <% }) %>

        <!-- Pagination -->
        <div class="row text-center">
            <div class="col-lg-12">
                <ul class="pagination">
                    <li>
                        <a class="listPage" href="/loaitin/<%= idLT %>/page1">&laquo;</a>
                    </li>
                    <% for(let i = fromPage; i <= toPage; i++) { %>
                        <li class="<%= pageNumber == i? 'active' : '' %>">
                            <a class="listPage" href="/loaitin/<%= idLT %>/page<%= i %>"><%= i %></a>
                        </li>
                    <% } %>
                        <li>
                            <a class="listPage" href="/loaitin/<%= idLT %>/page<%= pageCount %>">&raquo;</a>
                        </li>
                </ul>
            </div>
        </div>
        <!-- /.row -->